
<section class="auth-section auth-section-dual">
  <div class="container-fluid">
    <div class="row full-height align-items-center">
      <div class="col-12 col-md-6 col-lg-7">
        <div class="auth-box mx-auto">
          <h2>Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group auth-form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: "form-control auth-form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group auth-form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, class: "form-control auth-form-control", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group auth-form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="form-group auth-form-group">
              <%= f.submit class: "btn btn-primary btn-block auth-btn", "Log in" %>
            </div>
          <% end %>

          <%= render "admins/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>